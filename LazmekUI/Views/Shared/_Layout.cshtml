@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> Lazmek</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/MyProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-sm px-5 navbar-toggleable-sm navbar-light bg-gold text-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand font-monospace" asp-area="Customer" asp-controller="Home" asp-action="Index">
                    
                    <img src="/images/Lazmek_Logo.png" style="width:155px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex align-items-center ">
                    <ul class="navbar-nav flex-grow-1 me-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="OrderHeader" asp-action="Index">My Orders</a>
                        </li> 
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Cart" asp-action="Index">@await Component.InvokeAsync("ShoppingCart")  </a>
                        </li> 
                        <li class="nav-item">
                        </li>                 
                    </ul>
                    <div class="my-sm-3 my-md-0 w-50 me-2 position-relative align-items-center justify-content-center">
                        <form asp-area="Customer" asp-controller="Home" asp-action="Index" method="get">
                            <button type="submit" class="search-btn">
                                <i class="fas fa-search search-icon"></i>
                            </button>
                            <input type="text" name="search" class="form-control search-input text-opacity-25" placeholder="Search...">
                        </form>
                    </div>
                    @if(User.IsInRole(SD.Role_Admin))
                    {
                        <a class="nav-item bg-black mx-3 ">
                            <a class="nav-link fw-bolder" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashbord</a>
                        </a>                            
                    }                        
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid overflow-x-hidden  px-0 mx-0" style="margin-top:100px">
        <main role="main">
            <partial name="_Notifications"/>
            @RenderBody()
        </main>
    </div>
    <div id ="whychoseus" class="mt-5 py-5 bg-dark-mode">
        <div class="container pt-5">
            <h2  class="text-center mb-4 text-white">Why Choose Us?</h2>
            <div class="row text-center">

                <div class="col-md-3 mb-3">
                    <div class="card card-hover bg-dark-mode h-100 shadow-lg  border-0">
                        <div class="card-body">
                            <i class="bi bi-currency-dollar display-4 text-success"></i>
                            <h4 class="card-title text-success">Best Prices</h4>
                            <p class="card-text text-white-50">
                                We offer competitive prices without compromising on quality.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="card card-hover bg-dark-mode h-100 shadow-lg border-0">
                        <div class="card-body ">
                            <i class="bi bi-truck display-4 text-warning"></i>
                            <h4 class="card-title text-warning">Fast Delivery</h4>
                            <p class="card-text text-white-50">
                                Get your order delivered quickly and on time.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="card card-hover bg-dark-mode h-100 shadow-lg border-0">
                        <div class="card-body">
                            <i class="bi bi-award display-4 text-info"></i>
                            <h4 class="card-title text-info">Trusted by Customers</h4>
                            <p class="card-text text-white-50">
                                Over 10,000 satisfied customers trust our services.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="card card-hover bg-dark-mode h-100 shadow-lg border-0">
                        <div class="card-body">
                            <i class="bi bi-headset display-4 text-light"></i>
                            <h4 class="card-title text-light"> Support 24/7</h4>
                            <p class="card-text text-white-50">
                                We’re here whenever you need us.
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="container-fluid pt-5 mt-0 border-0 border-top border-dark bg-dark-mode text-white align-items-center ">
        <div class="row text-center">
            <div class="col-md-4 col-12 mb-3">
                <h5>Lazmek</h5>
                <p class="text-white-50" >
                    Your trusted place for quality products at the best prices.
                    We offer a wide range of items with durability and style, fast delivery,
                    and reliable support for a simple shopping experience.
                </p>
            </div>
            <div class="col-md-4 col-12 mb-3">
                <h5>Quick Links</h5>
                <ul class="list-unstyled">
                    <li><a href="#" class="link link-dark  text-white-50 text-decoration-none">Back To Top</a></li>
                    <li><a href="#" class="link link-dark  text-white-50 text-decoration-none">Home</a></li>
                    <li><a href="#" class="link link-dark  text-white-50 text-decoration-none">Your Orders</a></li>
                    <li><a href="#" class="link link-dark  text-white-50 text-decoration-none">Shopping</a></li>
                </ul>
            </div>
            <div class="col-md-4 col-12 mb-3">
                <h5>Contact Us</h5>
                <p class="text-white-50">Email: Lazmek@gmail.com</p>
                <p class="text-white-50">Phone: +962 7 9999 9999</p>
                <div>
                    <a href="#" class=" link link-dark "><i class="bi bi-whatsapp mx-1 text-white-50"></i></a>
                    <a href="#" class=" link link-dark "><i class="bi bi-facebook mx-1 text-white-50"></i></a>
                    <a href="#" class=" link link-dark "><i class="bi bi-linkedin mx-1 text-white-50"></i></a>
                    <a href="#" class=" link link-dark "><i class="bi bi-github mx-1 text-white-50"></i></a>            
                </div>
            </div>
        </div>
    </div>
    <footer class="footer text-white text-opacity-50 m-0 bg-black text-center align-content-center " style="height:50px">                
            <span>&copy; 2025 bowered by Khalid Al-Kurdi <i class="bi bi-balloon-heart"></i> </span>       
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/2smc81gpk08kfr89h5sv2yfs3wmvf5djkcqwlf9drkvbyxee/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
