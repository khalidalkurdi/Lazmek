
<div class="card  border-0 shadow my-5 bg-dark-mode text-light">
    <div class="card-header  py-3 ms-0" style="background-color:darkturquoise">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class=" text-white py-2"> Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row py-3">
            <div class="col-12 text-end">
                <a class="btn btn-primary" asp-controller="Product" asp-action="UpSert"> <i class="bi bi-plus-circle"></i> Add New Product </a>
            </div>
        </div>
        <table id="tabledata" class=" table table-bordered table-dark table-striped">
            <thead>
                <tr>
                    
                    <th>Title</th>
                    <th>Brand</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>           
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/product.js"></script>
}