@model Product
<div class="card border-0 shadow my-5 bg-dark-mode text-light">
    <div class="card-header bg-gradient  py-3 ms-0" style="background-color:darkturquoise">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class=" text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class=" form-floating py-3 col-12">
                    <label asp-for="Title" class="ms-0"></label>
                    <input asp-for="Title" disabled class="form-control border-0 shadow bg-dark-mode text-light"></textarea>
                </div>
                <div class="form-floating py-3 col-12">
                    <label asp-for="Description" class="ms-0 "></label>
                    <textarea asp-for="Description" disabled class="form-control border-0 shadow bg-dark-mode text-light" />
                </div>
                <div class="form-floating py-3 col-12">
                    <label asp-for="Quantity" class="ms-0 "></label>
                    <input asp-for="Quantity" disabled class="form-control border-0 shadow bg-dark-mode text-light" />
                </div>
                <div class="form-floating py-3 col-12">
                    <label asp-for="Brand" class="ms-0 "></label>
                    <input asp-for="Brand" disabled class="form-control border-0 shadow bg-dark-mode text-light" />
                </div>
                <div class="form-floating py-3 col-12">
                    <label asp-for="ListPrice" class="ms-0 "></label>
                    <input asp-for="ListPrice" disabled class="form-control border-0 shadow bg-dark-mode text-light" />
                </div>
                <div class="form-floating py-3 col-12">
                    <label asp-for="Price" class="ms-0 "></label>
                    <input asp-for="Price" disabled class="form-control border-0 shadow bg-dark-mode text-light" />
                </div>
                <div class="form-floating py-3 col-12">
                    <label asp-for="Price50" class="ms-0 "></label>
                    <input asp-for="Price50" disabled class="form-control border-0 shadow bg-dark-mode text-light" />
                </div>
                <div class="form-floating py-3 col-12">
                    <label asp-for="Price100" class="ms-0 "></label>
                    <input asp-for="Price100" disabled class="form-control border-0 shadow bg-dark-mode text-light" />
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <input type="submit" value="Delete" class="btn btn-danger form-control " />
                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-outline-light form-control" asp-area="Admin" asp-controller="Product" asp-action="Index">Back to home</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>