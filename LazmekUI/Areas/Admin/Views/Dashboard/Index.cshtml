@model DashboardVM
<style>
.card-stat {
    border: 0;
    box-shadow: 0 10px 30px rgba(0,0,0,.06);
    width:100%;
    height:200px;
    padding:40px;
    transition:0.3s linear;
    background-color: #13161b;   
}
.card-stat:hover{
   transform:translateY(-10px);
}


.trend-up {
    color: var(--bs-success);
}

.trend-down {
    color: var(--bs-danger);
}

.table thead th {
    font-weight: 600;
}

.avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: #e9ecef;
    display: inline-grid;
    place-items: center;
    font-weight: 600;
}

.shadow-soft {
    box-shadow: 0 10px 30px rgba(0,0,0,.06);
}

.sticky-actions {
    position: sticky;
    top: 0;
    z-index: 1020;
    background: var(--bs-body-bg);
}

.muted {
    color: var(--bs-secondary-color);
}
</style>
    <div class="card text-white bg-dark-mode">
        <div class="card-header fs-3 bg-gold justify-content-center align-content-center p-3">
            <div class="container-fluid text-center ">
                <i class="bi bi-speedometer2 me-2"></i> DASHBOARD      
            </div>
        </div>
        <div class="card-title py-5 px-2 bg-dark-mode text-white row align-content-center  justify-content-center my-4 sticky-actions ">
            <div class=" col-md-3 col-12">                
                <h5>Quick View On Updates</h5>
            </div>
            <form method="get" asp-controller="Dashboard" asp-action="Index" class=" col-md-3 col-12 ">
                <select asp-for="@Model.timePeriod" class="form-select w-auto d-inline-block border-dark bg-dark-mode text-white">
                    <option value="@(1)" >Today</option>
                    <option value="@(7)" >Last 7 Days</option>
                    <option value="@(30)">Last 30 Days</option>                  
                </select>
                <button type="submit" class="btn btn-outline-info "><i class="bi bi-arrow-repeat"></i>Update</button>
            </form>
        </div>
        <div class="card-body row bg-dark-mode text-white mb-4">
            <div class="row gap-1 ">
                <div class="col-12 col-sm-6 col-md-4 mb-3">
                    <div class="card card-stat p-3">
                        <div class="d-flex flex-column align-items-center column-gap-3">
                            <div>
                                <div class="text-white-50 ">Number Of Users</div>
                            </div>
                            <div class=" text-info "><i class="bi bi-people display-4"></i></div>
                            <div class="text-center">
                                <div class="fs-2 text-white fw-bold">@Model.numberOfUsers</div>
                                <div class="small text-white-50"> <span class="trend-up"><i class="bi bi-plus "></i>@Model.growNumberOfUsers</span>  </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-4 mb-3">
                    <div class="card card-stat p-3">
                        <div class="d-flex flex-column align-items-center column-gap-3">
                            <div>
                                <div class="text-white-50 ">Number Of Orders</div>
                            </div>
                            <div class=" text-white-50 "><i class="bi bi-basket2 display-4"></i></div>
                            <div class="text-center">
                                <div class="fs-2 text-white fw-bold">@Model.numberOfOrders</div>
                                 <div class="small text-white-50"><span class="trend-up"><i class="bi bi-plus "></i>@Model.growNumberOfOrders</span>  </div>
                            </div>
                        </div>
                    </div>
                </div>           
            </div>
            <div class="row gap-1">
                 <div class="col-12 col-sm-6 col-md-4 mb-3">
                    <div class="card card-stat p-3">
                        <div class="d-flex flex-column align-items-center column-gap-3">
                            <div>
                                <div class="text-white-50 ">Number Of Products</div>
                            </div>
                            <div class=" text-warning "><i class="bi bi-box-seam display-4"></i></div>
                            <div class="text-center">
                                <div class="fs-2 text-white fw-bold">@Model.numberOfProducts</div>
                                <div class="small text-white-50"><span class="trend-up"><i class="bi bi-plus "></i>@Model.growNumberOfProducts </span>  </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-4 mb-3">
                    <div class="card card-stat p-3">
                        <div class="d-flex flex-column align-items-center column-gap-3">
                            <div>
                                <div class="text-white-50 ">Sales</div>
                            </div>
                            <div class=" text-danger "><i class="bi bi-currency-exchange display-4"></i></div>
                            <div class="text-center">
                                <div class="fs-2 text-white fw-bold">JOD @Model.totalOfSales</div>
                                @if(Model.growTotalOfSales>0){
                                    <span class="trend-up"><i class="bi bi-arrow-up-right"></i>@Model.growTotalOfSales %</span>
                                }else{
                                    <span class="trend-down"><i class="bi bi-arrow-down-right"></i>@Model.growTotalOfSales %</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>                
            </div>
        </div>
    </div>
    <main class="container py-4">      
        <hr />       
        <div class="row g-3">   
            <div class="col-12 col-md-6" id="orders">
                <div class="card shadow-soft">
                    <div class="card-header bg-dark">
                        <h2 class="text-white h6 mb-0"><i class="bi bi-receipt-cutoff me-2"></i>Wallet Activities</h2>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table bg-black table-dark table-hover table-striped mb-0">
                                <thead>
                                    <tr>
                                        <th>Order Status</th>
                                        <th>Sales</th>                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var activity in Model.financialActivities)
                                    {
                                        <tr>
                                            <td>  
                                                @activity.status
                                            </td>                                            
                                            <td class=@(activity.status==SD.PaymentStatusApproved?"text-success":"text-danger")>
                                                @activity.total
                                            </td>                                        
                                        </tr>                                                                        
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>        
        </div>
    </main>
    
    
