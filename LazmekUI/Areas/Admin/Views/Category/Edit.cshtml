
@model Category

<div class="card mt-4 border-0 shadow bg-dark-mode text-white-50">
    <div class="card-header bg-gradient  py-3 ms-0" style="background-color:goldenrod">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class=" text-white py-2">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border border-dark p-3">
                <div class=" form-floating py-3 col-12">
                    <label asp-for="Name" class="ms-0"></label>
                    <input asp-for="Name" class="form-control border-0 shadow text-light bg-dark-mode " />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>                
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <input type="submit" value="Save Changes" class="btn btn-warning form-control" />
                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-outline-light form-control" asp-controller="Category" asp-action="Index">Back to home</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}