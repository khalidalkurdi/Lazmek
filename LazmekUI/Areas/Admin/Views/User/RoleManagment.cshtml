@model RoleManagmentVM 

<div class="card shadow border-0 mt-4 text-white-50 bg-dark-mode">
    <div class="card-header bg-danger bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">                
                <h2 class="py-2 text-white">Role Managment</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-3">
            <div class="col-md-12">
                <form class="row" method="post">                    
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <input asp-for="@Model.user.Id" hidden />
                    <div class="form-floating mb-3 col-md-12">
                        <input asp-for="@Model.user.Name" class="form-control bg-dark-mode text-white" disabled />
                        <label asp-for="@Model.user.Name" class="ms-2">Name</label>
                    </div>
                    <div class="form-floating mb-3 col-md-12">
                        <select id="Input_Role" asp-for="@Model.user.Role" asp-items="@Model.RoleLsit" class="form-select bg-dark-mode text-white">
                            <option disabled selected>--Select Role--</option>
                        </select>
                    </div>
                    <div class=" d-flex gap-2 ">
                        <button  type="submit" class=" col-5 btn btn-lg btn-warning col-md-3 ">Update Role</button>
                        <a asp-controller="user" asp-action="Index"  class=" col-5 btn btn-lg btn-outline-light col-md-3">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
