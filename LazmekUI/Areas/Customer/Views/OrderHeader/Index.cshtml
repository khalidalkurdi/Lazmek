@model List<OrderHeader>
<div class="px-5 my-5">
    <div class="card   border-0 shadow  ">
        <div class="card-header bg-gradient bg-warning py-3 ms-0 ">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class=" text-white py-2"> Order List</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4 overflow-x-auto" >
            <table class=" table table-bordered table-striped  ">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>status</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.Name</td>
                            <td>@order.PhoneNumber</td>
                            <td>@order.user.Email</td>
                            <td>@order.OrderStatus</td>
                            <td>@order.OrderTotal</td>
                            <td>
                                <a asp-action="Details" asp-route-orderId="@order.Id" class="btn btn-dark mx-2"><i class="bi bi-info-circle"></i>Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
