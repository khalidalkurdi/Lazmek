@{
    ViewData["Title"] = "Welcome";
}
<div class="py-2 ">
    <div class="row h-100 align-items-center mb-5 pb-5">
        <div class="col-12 col-md-6 text-center row justify-content-center ">
            <h1 class="text-primary mb-3">
                Welcome to
                <br />
                <span class="fs-1" style="letter-spacing:2rem; color:gold;">
                    Lazmek
                </span>
            </h1>
            <p class="text-muted mb-4 small col-md-8 ">
                Discover amazing products and enjoy a seamless shopping experience. Join thousands of happy customers today!
            </p>
            <div class="d-flex flex-wrap justify-content-center gap-2">
                <a asp-area="Identity" asp-page="/Account/Login" class="btn bg-gold text-dark">Sign In</a>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-dark">Sign up</a>
                <a asp-area="Customer" asp-controller="Home" asp-action="Welcome" asp-route-gust="@true" class="btn btn-sm btn-outline-info">Continue as Guest</a>
            </div>
            <a href="#whychoseus" class=" mt-3 text-muted "> <h5>WHY CHOOSE US ?</h5></a>
        </div>
        <div class="col-12 col-md-6 mt-3 mb-md-0 text-center">
            <img src="/images/cart.svg" class="img-fluid w-75" alt="Shopping Cart" />
        </div>        
    </div>
    <div class="text-center">
    </div>
</div>
