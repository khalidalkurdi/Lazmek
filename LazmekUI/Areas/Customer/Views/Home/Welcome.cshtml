@{
    ViewData["Title"] = "Welcome";
}

<div class="pt-2  m-0 px-0">
    <div class="row h-100 align-items-center mb-5 p-5">
        <div class="col-12 col-md-6 text-center row justify-content-center ">
            <h1 class="anmi text-primary mb-3" style="animation-delay:0.5s;">
                Welcome to
                <br />
                <span class="anmi fs-1" style="animation-delay:0.7s; letter-spacing:2rem; color:gold;">
                    Lazmek
                </span>
            </h1>
            <p class="anmi text-muted mb-4 small col-md-8 " style="animation-delay:1s;">
                Everything you need in one place.<br/>
                <span class="anmi" style="animation-delay:1.2s;">Join thousands of happy customers today!</span>
            </p>
            <div class="anmi d-flex flex-wrap justify-content-center gap-2" style="animation-delay:1.4s;">
                <a asp-area="Identity" asp-page="/Account/Login" class="btn bg-gold text-dark">Sign In</a>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-dark">Sign up</a>
                <a asp-area="Customer" asp-controller="Home" asp-action="Welcome" asp-route-gust="@true" class="btn btn-outline-info">Continue as Guest</a>
            </div>
            <a href="#whychoseus" class="anmi mt-3 text-muted " style="animation-delay:1.5s;"> <h5>WHY CHOOSE US ?</h5></a>
        </div>
        <div class="col-12 col-md-6 mt-3 mb-md-0 text-center">
            <img src="/images/cart.svg" class="anmi img-fluid w-75" alt="Shopping Cart" style="animation-delay:1s;" />
        </div>        
    </div>
    <div class="container-fluid bg-primary m-0 p-5 mt-5">
        <div class="row">
            <div class=" col-md-6 col-12 text-center align-content-center">
                <h2 class="text-white opacity-75">
                    Discover, What Do You Need?
                </h2>
                <h4 class="text-white-50">
                    No More Searching Everywhere - find it here...
                </h4>
            </div>
            <div class="col-md-6 col-12">
                <div id="productsCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
                    <div class="carousel-inner">                               
                        <div class="carousel-item active">
                            <img src="/images/ActiveCarsol.jpg" class="d-block w-100">
                    
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/LaptopCategory.jpg" class="d-block w-100" style="filter:blur(4px) brightness(75%)" alt="...">
                            <div class="carousel-caption d-md-block">
                                <h3 class="text-white">Laptops</h3>
                                <h5 class="text-white-50">Handred Of Laptops Of Couarse, You Will Find What You Like </h5>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/CarCategory.png" class="d-block w-100" style="filter:blur(2px) brightness(75%)" alt="...">
                            <div class="carousel-caption d-md-block">
                                <h3 class="text-white" >Cars</h3>
                                <h5 class="text-white-50">Handred Of Cars Of Couarse, You Will Find What You Like </h5>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/PhoneCategory.png" class="d-block w-100 " style="filter:blur(4px) brightness(75%)" alt="...">
                            <div class="carousel-caption d-md-block">
                                <h3 class="text-white" >Phones</h3>
                                <h5 class="text-white-50">Handred Of Phones Of Couarse, You Will Find What You Like </h5>
                            </div>
                        </div>
                    </div>

                    <!-- Controls -->
                    <button class="carousel-control-prev d-flex align-items-center justify-content-center" type="button"
                            data-bs-target="#productsCarousel" data-bs-slide="prev"
                            style="width:45px; height:45px; top:50%;  transform:translateY(-50%); background:rgba(0,0,0,0.5); border-radius:50%;">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>

                    <button class="carousel-control-next d-flex align-items-center justify-content-center" type="button"
                            data-bs-target="#productsCarousel" data-bs-slide="next"
                            style="width:45px; height:45px; top:50%;  transform:translateY(-50%); background:rgba(0,0,0,0.5); border-radius:50%;">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
