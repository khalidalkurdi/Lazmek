@page
@model LoginModel
<div class="px-5 row justify-content-center align-content-center mb-5">
    <div class="card shadow border-0 px-0 mt-4 col-md-8 col-sm-12">
        <div class="card-header bg-dark-mode bg-gradient ml-0 py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-light ">LogIn</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-12">
                    <section>
                        <form id="account" method="post">
                            <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">Use a local account to log in.</h3>
                        
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="form-label">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox mb-3">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <div>
                                <button id="login-submit" type="submit" class=" w-100 text-light btn btn-lg bg-gold ">Log in</button>
                            </div>
                            <div class="d-flex justify-content-between pt-2">
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-muted">Forgot your password?</a>
                                </p>
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-muted ">Register as a new user</a>
                                </p>                                
                            </div>
                        </form>
                    </section>
                </div>
                <div class="col-12 p-3 text-center">
                    <section>
                        <p class="divider-text d-flex pt-3">or</p>                                                   
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        if (provider.Name.ToLower() == "facebook")
                                        {
                                            <button type="submit" name="provider" class="fs-1 btn" title="Log in using your @provider.DisplayName account"><i class="bi text-info bi-facebook"></i></button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                        }
                                    }
                                </p>
                            </div>
                        </form>                            
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
