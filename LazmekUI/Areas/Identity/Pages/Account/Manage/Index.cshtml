@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-body border-0 py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Profile details</h5>
                <span class="text-secondary small">Keep your information up to date</span>
            </div>
        </div>
        <div class="card-body">
            <form id="profile-form" method="post">                        
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.Name" class="form-control" placeholder="Display name" />
                            <label asp-for="Input.Name"></label>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                            <label asp-for="Input.Email"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone number" />
                            <label asp-for="Input.PhoneNumber"></label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.City" class="form-control" placeholder="City" />
                            <label asp-for="Input.City"></label>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.Country" class="form-control" placeholder="Country" />
                            <label asp-for="Input.Country"></label>
                            <span asp-validation-for="Input.Country" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.JoinDate" class="form-control" placeholder="Username" disabled />
                            <label asp-for="Input.JoinDate"></label>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-floating">
                            <button type="submit" class="btn btn-dark">Update My Information</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
